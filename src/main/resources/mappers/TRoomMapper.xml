<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vip.home.mapper.TRoomMapper">
  <resultMap id="BaseResultMap" type="com.vip.home.domain.entity.TRoom">
    <!--@mbg.generated-->
    <id column="room_id" jdbcType="INTEGER" property="roomId" />
    <result column="room_num" jdbcType="VARCHAR" property="roomNum" />
    <result column="room_price" jdbcType="DECIMAL" property="roomPrice" />
    <result column="room_create_time" jdbcType="TIMESTAMP" property="roomCreateTime" />
    <result column="room_status" jdbcType="TINYINT" property="roomStatus" />
    <result column="room_type_id" jdbcType="INTEGER" property="roomTypeId" />
    <result column="order_id" jdbcType="INTEGER" property="orderId" />
    <result column="admin_id" jdbcType="INTEGER" property="adminId" />
  </resultMap>


  <resultMap id="base_result_map"
             type="com.vip.home.domain.vo.TRoomVo">
      <id column="room_id" jdbcType="INTEGER" property="roomId" />
      <result column="room_num" jdbcType="VARCHAR" property="roomNum" />
      <result column="room_price" jdbcType="DECIMAL" property="roomPrice" />
      <result column="room_type_id" jdbcType="INTEGER" property="roomTypeId" />

    <collection property="tRoomImageVos" ofType="com.vip.home.domain.vo.TRoomImageVo">
      <id property="roomImageId" column="room_image_id"/>
      <result property="roomId" column="room_id"/>
      <result property="roomImageDescribe" column="room_image_describe"/>
      <result property="roomImageOrder" column="room_image_order"/>
      <result property="roomImageUrl" column="room_image_url"/>

    </collection>



  </resultMap>

  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    room_id, room_num, room_price, room_create_time, room_status, room_type_id, order_id, 
    admin_id
  </sql>
  <select id="findByRoomId" resultMap="base_result_map">
    select *
    from t_room tr
    left  join t_room_image tri on tr.room_id = tri.room_id
    where tr.room_id=#{roomId} and room_status=0

  </select>


</mapper>