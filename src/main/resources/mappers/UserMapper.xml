<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fourseasons.hotel.mapper.UserMapper">
    <resultMap id="userMap" type="UserVo">
        <id property="userId" column="user_id" />
        <result property="userName" column="user_name" />
        <result property="userPassword" column="user_password" />
        <result property="userCreateTime" column="user_create_time" />
        <result property="userLastLogin" column="user_last_login" />
    </resultMap>
    
    <resultMap id="userMapVo" type="UserVo">
        <id property="userId" column="user_id" />
        <result property="userPassword" column="user_password" />
        <result property="userLastLogin" column="user_last_login" />
    </resultMap>

    <select id="findUserByName" resultMap="userMapVo">
      SELECT `user_id`,`user_password`,`user_last_login` FROM `user` WHERE `user_name` = #{name}
    </select>

    <update id="updateLoginTimeById">
        UPDATE `user` SET `user_last_login` = #{time} WHERE `user_id` = #{uid}
    </update>
</mapper>